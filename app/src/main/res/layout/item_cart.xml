<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_cart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/man"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"/>
            <TextView
                android:id="@+id/txtname"
                android:text="Name food"
                android:maxLength="10"
                app:layout_constraintStart_toEndOf="@id/image_cart"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/purple_200"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtprice"
                android:text="$5.0"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/purple_200"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imag_sub"
                app:layout_constraintStart_toEndOf="@id/image_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/sub"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"/>
            <TextView
                android:id="@+id/txtamount"
                android:text="$5"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imag_sub"
                app:layout_constraintTop_toTopOf="@id/imag_sub"
                android:textSize="@dimen/_18ssp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/purple_200"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imag_add"
                app:layout_constraintStart_toEndOf="@id/txtamount"
                app:layout_constraintTop_toTopOf="@id/imag_sub"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/add"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"/>
            <TextView
                android:id="@+id/txtprice2"
                android:text="$5.0"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/purple_200"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>